		function showAudioTag(e){
			$('#table').bootstrapTable('expandRow',e);
			$('#b_'+e+'_play').hide();
			$('#b_'+e+'_stop').show();
		}

		function hideAudioTag(e){
			$('#table').bootstrapTable('collapseRow',e);
			$('#b_'+e+'_play').show();
			$('#b_'+e+'_stop').hide();
		}
	

<p>
	Tips : scroll to left with the cursor on the table to see more informations</p>

<table class="table table-responsive table-hover table-striped rounded-lg shadow" id="table" 
data-toggle="table" 
data-cache="true" 
data-filter-control="true" 
data-sort-order="desc" 
data-height="420" 
data-detail-view="true" 
data-detail-formatter="playAudioDetailFormatter"
data-detail-view-icon="false">
	<thead>
		<tr>
			<th></th>
			<th></th>
			{% for data in metas["record"] %}			
					<th data-field="{{ data["field_name"] }}" data-sortable="true" data-filter-control="input">
						{{ data["label"] }}
					</th>
			{% endfor %}
			<th></th>
			{% for data in metas["production"] %}
					<th data-field="{{ data["field_name"] }}" data-sortable="true" data-filter-control="input">
						{{ data["label"] }}
					</th>
			{% endfor %}
			{% for data in metas["speaker"] %}
					<th data-field="{{ data["field_name"] }}" data-sortable="true" data-filter-control="input">
						{{ data["label"] }}
					</th>
			{% endfor %}
		</tr>
	</thead>
</tr></thead>
<tbody class="text-center" >
{% for data in results %}
	<tr id="record{{ data[" record_id"] }}">
		{% include 'one_record.twig' with {'data': data, 'metas':metas} %}
	</tr>
{% endfor %}</tbody></table>
